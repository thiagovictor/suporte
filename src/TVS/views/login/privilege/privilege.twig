{% extends "template.twig" %}


{% block superior %}
    <a type="button" href="{{path('privilege_new')}}" class="{{class_btn}}" role="button">
        <span class="{{class_btn_new}}" aria-hidden="true"></span> Novo
    </a>
{% endblock %}

{% block conteudo %}
    <table class="{{class_table}}">
        <thead>
            <tr>
                <th>ID</th>
                <th>Rota</th>
                <th>Visualizar</th>
                <th>Novo</th>
                <th>Editar</th>
                <th>deletar</th>
                <th>Usu&aacute;rio</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            {% for privilege in result %}
                <tr>
                    <td>{{ privilege.id }}</td>
                    <td>{{ privilege.route.route }}</td>
                    <td>{{ privilege.display }}</td>
                    <td>{{ privilege.new }}</td>
                    <td>{{ privilege.edit }}</td>
                    <td>{{ privilege.delete }}</td>
                    <td>{{ privilege.user.username }}</td>  
                    <td>
                        <a href="{{path('privilege_edit',{'id':privilege.id})}}" class="{{class_btn}}" aria-label="Left Align">
                            <span class="{{class_btn_edit}}" aria-hidden="true"></span>
                        </a>
                        <a href="{{path('privilege_delete',{'id':privilege.id})}}" class="{{class_btn}}" aria-label="Left Align">
                            <span class="{{class_btn_delete}}" aria-hidden="true"></span>
                        </a>

                    </td>
                </tr>   
            {% endfor %}
        </tbody>
    </table>
            {{ pagination|raw}}


{% endblock %}
