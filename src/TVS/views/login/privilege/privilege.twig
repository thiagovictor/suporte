{% extends "template.twig" %}

{% block tituloPainel %}{{ titulo | raw }}{% endblock %}
{% block superior %}
    {% if Message is defined %}
        {% for mens in Message %}
            <div class="alert alert-info alert-dismissible" role="alert">
                <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <ul>{{ mens | raw }}</ul>
            </div>
        {% endfor%}
    {% endif %}
    <div class="col-lg-8">
        <a type="button" href="{{path('privilege_new')}}" class="{{class_btn}}" role="button">
            <span class="{{class_btn_new}}" aria-hidden="true"></span> Novo
        </a>
    </div>
    <form action="{{path('privilege_search')}}" method="POST">
        <div class="col-lg-4">
            <div class="input-group">
                <input type="text" name="search" class="form-control" placeholder="Procurar por...">
                <span class="input-group-btn">
                    <button class="btn btn-default" type="button">ir</button>
                </span>
            </div>
        </div>
    </form>
{% endblock %}

{% block conteudo %}
    <table class="{{class_table}}">
        <thead>
            <tr>
                <th>ID</th>
                <th>Rota</th>
                <th>Visualizar</th>
                <th>Novo</th>
                <th>Editar</th>
                <th>deletar</th>
                <th>Usu&aacute;rio</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            {% for privilege in result %}
                <tr>
                    <td>{{ privilege.id }}</td>
                    <td>{{ privilege.route.route }}</td>
                    <td>{{ privilege.display }}</td>
                    <td>{{ privilege.new }}</td>
                    <td>{{ privilege.edit }}</td>
                    <td>{{ privilege.delete }}</td>
                    <td>{{ privilege.user.username }}</td>  
                    <td>
                        <a href="{{path('privilege_edit',{'id':privilege.id})}}" class="{{class_btn}}" aria-label="Left Align">
                            <span class="{{class_btn_edit}}" aria-hidden="true"></span>
                        </a>
                        <a href="{{path('privilege_delete',{'id':privilege.id})}}" class="{{class_btn}}" aria-label="Left Align">
                            <span class="{{class_btn_delete}}" aria-hidden="true"></span>
                        </a>

                    </td>
                </tr>   
            {% endfor %}
        </tbody>
    </table>
    {{ pagination|raw}}


{% endblock %}
