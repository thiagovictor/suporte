{% extends "template.twig" %}

{% block conteudo %}

    {% for mens in Message %}
        <div class="alert alert-danger" role="alert">
            <ul>{{ mens }}</ul>
        </div>
    {% endfor%}

    <form class="form-horizontal" method="POST" action="{{ path('route_new_post') }}" enctype="multipart/form-data">
        <div class="form-group">
            <label for="route" class="col-sm-2 control-label">Rota</label>
            <div class="col-sm-4">
                <input type="text" name="route" class="form-control" id="route" placeholder="Nome da Rota">
            </div>
        </div>
        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
                <button type="submit" class="btn btn-default">Cadastrar</button>
            </div>
        </div>
    </form>
{% endblock %}
