<!DOCTYPE html>

{% set class_table = 'table table-condensed' %}
{% set class_btn = 'btn btn-default btn-sm' %}
{% set class_btn_new = 'glyphicon glyphicon-plus' %}
{% set class_btn_edit = 'glyphicon glyphicon-pencil' %}
{% set class_btn_delete = 'glyphicon glyphicon-remove' %}
{% set class_btn_form_submit = 'btn btn-success' %}
{% set class_btn_form_return = 'btn btn-danger' %}


<html lang="en">
    <head>
        <meta charset="utf-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <title>{% block title %} TVS Suporte {% endblock %}</title>
        <link href="/css/bootstrap.min.css" rel="stylesheet">
        <link href="/css/bootstrap-theme.min.css" rel="stylesheet">
        <link href="/css/theme.css" rel="stylesheet">
